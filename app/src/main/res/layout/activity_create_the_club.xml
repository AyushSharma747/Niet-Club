<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="10dp">

        <!-- Input Fields Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center">

            <!-- Club Name -->



            <!-- Full Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name :"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:minWidth="100dp"/>

                <EditText
                    android:id="@+id/nameField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Full Name"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/darker_gray"
                    android:padding="10dp"/>
            </LinearLayout>

            <!-- Branch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Branch :"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:minWidth="100dp"/>

                <EditText
                    android:id="@+id/branchField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Branch"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/darker_gray"
                    android:padding="10dp"/>
            </LinearLayout>

            <!-- ERP ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ERP ID :"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:minWidth="100dp"/>

                <EditText
                    android:id="@+id/erpField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter ERP ID"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/darker_gray"
                    android:padding="10dp"/>
            </LinearLayout>

            <!-- Year -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year :"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:minWidth="100dp"/>

                <EditText
                    android:id="@+id/yearField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Year"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/darker_gray"
                    android:padding="10dp"/>
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email :"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:minWidth="100dp"/>

                <EditText
                    android:id="@+id/emailField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Email Address"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/darker_gray"
                    android:padding="10dp"/>
            </LinearLayout>

            <!-- Phone Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone :"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:minWidth="100dp"/>

                <EditText
                    android:id="@+id/phoneField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Phone Number"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/darker_gray"
                    android:padding="10dp"
                    android:inputType="phone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Club Name :"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:minWidth="100dp"/>

                <EditText
                    android:id="@+id/clubNameField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Club Name"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/darker_gray"
                    android:padding="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Club Type :"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:minWidth="100dp"/>

                <EditText
                    android:id="@+id/clubTypeField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Type of Club"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/darker_gray"
                    android:padding="10dp"/>
            </LinearLayout>
        </LinearLayout>




        <!-- Type of Club -->


        <!-- Join Button -->
        <TextView
            android:id="@+id/joinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create The Club"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:padding="20dp"
            android:gravity="center"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
